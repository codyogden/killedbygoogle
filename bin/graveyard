#!/usr/bin/env node
const slugify = require('slugify');
const fs = require('fs');

const data = require('../graveyard.json');

slugify.extend({
  '+': '-plus',
  '@': '-at',
});

data.map((item) => {
  const newItem = item;
  newItem.slug = slugify(item.name, {
    lower: true,
  });
  return newItem;
});

fs.writeFile('public/graveyard.json', JSON.stringify(data), (err) => {
  const { log } = console;
  if (err) throw err;
  log('Slugs added. JSON minified.');
});
fs.mkdir("public/story/", (err) => {
  if (err) throw err;
  fs.writeFile('public/story/index.html', fs.readFileSync("story/template.html"), (err) => {
    const { log } = console;
    if (err) throw err;
    log('Story built.');
  });
});
